---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Proyecto from "../components/Proyecto.astro";
import Timeline from "../components/Timeline.astro";
---

<Layout
  title="Portafolio de Javier Montero - Desarrollador FullStack"
  description="Portafolio personal de Javier"
>
  <SectionContainer
    id="home"
    class="py-16 max-w-[800px] mx-auto section md:py-36 scroll-m-20 w-full container"
  >
    <Hero />
  </SectionContainer>

  <SectionContainer id="experience" class="mx-auto max-w-[800px] py-8">
    <!-- Título de experiencia -->
    <div>
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-[#f5f5f5] dark:via-slate-400 dark:to-neutral-400 mb-4 text-2xl md:text-3xl"
      >
        Experiencia laboral
      </h2>
    </div>
    <Timeline />
  </SectionContainer>

  <SectionContainer id="projects" class="mx-auto max-w-[800px] py-8 pb-32">
    <!-- Título de proyectos -->
    <div>
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-[#f5f5f5] dark:via-slate-400 dark:to-neutral-400 text-2xl md:text-3xl"
      >
        Proyectos
      </h2>
    </div>
    <Proyecto />
  </SectionContainer>

  <!-- <SectionContainer id="about-me" class="mx-auto max-w-[800px] py-8">
    <div>
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-[#f5f5f5] dark:via-slate-400 dark:to-neutral-400 text-2xl md:text-3xl"
      >
        Sobre mí
      </h2>
    </div>
  </SectionContainer> -->
</Layout>
