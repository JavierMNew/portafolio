---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import Proyecto from "../components/Proyecto.astro";
import Timeline from "../components/Timeline.astro";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<Layout
  title="Portafolio de Javier Montero - Desarrollador FullStack"
  description="Portafolio personal de Javier"
>
  <SectionContainer
    id="home"
    class="grid grid-cols-1 md:grid-cols-2 gap-8 mx-auto max-w-6xl items-center py-8"
  >
    <!-- Imagen de perfil -->
    <img
      src="public/yo.jpg"
      alt="yo"
      class="rounded-2xl border-4 border-gray-200 dark:border-gray-700 shadow-lg max-h-[50vh] object-cover justify-self-center"
    />

    <!-- Texto de presentación -->
    <div class="space-y-6">
      <h2 class="text-6xl font-medium text-gray-900 dark:text-gray-50">
        Hola,
        <span
          class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400"
          >soy Javier Montero</span
        >
      </h2>
      <p class="text-lg leading-6 text-gray-600 dark:text-gray-200">
        +1 año de experiencia. Ingeniero de Software de Tabasco, México. Con
        experiencia en el desarrollo
        <span class="opacity-70">FullStack</span>.
      </p>
      <!-- Redes sociales -->
      <div class="flex gap-4 text-gray-900 dark:text-gray-50">
        <SocialPill href="https://www.linkedin.com/in/javiermprz/">
          <LinkedIn />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/JavierMNew">
          <GitHub />
          GitHub
        </SocialPill>
      </div>
    </div>
  </SectionContainer>

  <SectionContainer id="experience" class="mx-auto max-w-6xl py-8">
    <!-- Título de experiencia -->
    <div class="text-center">
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400 text-4xl mb-4"
      >
        Experiencia
      </h2>
    </div>
    <Timeline />
  </SectionContainer>

  <SectionContainer id="projects" class="mx-auto max-w-6xl py-8">
    <!-- Título de proyectos -->
    <div class="text-center">
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400 text-4xl"
      >
        Proyectos
      </h2>
    </div>
    <!-- Grid de proyectos -->
    <div class="grid grid-cols-3">
      <Proyecto
        link="/proyectos/agua-maxima"
        icono="public/agua-maxima.webp"
        alt="yo"
        nombre="Agua Máxima"
        descripcion="Proyecto de una empresa de agua purificada"
        tecnologias={["Astro", "JavaScript", "Node.js", "Tailwind"]}
      />
      <Proyecto
        link="/proyectos/bimo"
        icono="public/bimo.png"
        alt="yo"
        nombre="Bimo - Módulo ERP Almacenes"
        descripcion="Proyecto de un modulo ERP para el control de inventario de una empresa"
        tecnologias={["Php", "JavaScript", "MySQL", "Boostrap"]}
      />
    </div>
  </SectionContainer>

  <SectionContainer id="about-me" class="mx-auto max-w-6xl py-8">
    <!-- Título de sobre mí -->
    <div class="text-center">
      <h2
        class="animate-text-gradient inline-flex bg-gradient-to-r from-gray-900 via-gray-600 to-gray-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400 text-4xl"
      >
        Sobre mí
      </h2>
    </div>
  </SectionContainer>
</Layout>
